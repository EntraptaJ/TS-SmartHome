{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    // Strict Rules
        // Source Maps
    "inlineSourceMap": false,
    "isolatedModules": false,
    "traceResolution": false,
    // Features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "ts-smarthome/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}